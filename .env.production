# Production Environment Configuration
# Copy these values to Elastic Beanstalk Environment Properties

APP_NAME="Game Platform API"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_TIMEZONE=America/Denver
APP_URL=https://api.yourdomain.com

#--------------------------------------------------------------------------
# Database (RDS MySQL)
#--------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_DATABASE=game_platform
DB_USERNAME=admin
DB_PASSWORD=your-secure-password

#--------------------------------------------------------------------------
# Redis (ElastiCache)
#--------------------------------------------------------------------------
REDIS_HOST=your-elasticache-endpoint.region.cache.amazonaws.com
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

#--------------------------------------------------------------------------
# Logging
#--------------------------------------------------------------------------
LOG_CHANNEL=stderr
LOG_LEVEL=error

#--------------------------------------------------------------------------
# Platform Configuration
#--------------------------------------------------------------------------
PLATFORM_NAME="Diamond Games"
PLATFORM_VERSION=1.0.0
PLATFORM_TIMEZONE=America/Denver

DAILY_RESET_HOUR=0
DAILY_GENERATE_AHEAD=7
DAILY_CACHE_TTL=3600

STREAK_GRACE_HOURS=12
STREAK_INITIAL_FREEZES=1
STREAK_MAX_FREEZES=5

INITIAL_HINTS=3
HINTS_PER_COMPLETION=0
HINTS_PER_MILESTONE=2

LEADERBOARD_LIMIT=100
LEADERBOARD_CACHE_TTL=300

#--------------------------------------------------------------------------
# Claude API (Required for puzzle generation)
#--------------------------------------------------------------------------
CLAUDE_API_KEY=sk-ant-your-api-key
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=2048
CLAUDE_TEMPERATURE=0.8

#--------------------------------------------------------------------------
# Cross-Promotion
#--------------------------------------------------------------------------
CROSSPROMO_ENABLED=true
CROSSPROMO_FREQUENCY=5

WAITPULSE_ENABLED=false
WAITPULSE_API_URL=
WAITPULSE_API_KEY=

#--------------------------------------------------------------------------
# AWS
#--------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
AWS_BUCKET=game-platform-assets

#--------------------------------------------------------------------------
# Rate Limiting
#--------------------------------------------------------------------------
RATE_LIMIT_API=60
RATE_LIMIT_SESSIONS=30
RATE_LIMIT_HINTS=20
