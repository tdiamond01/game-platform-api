option_settings:
  aws:elasticbeanstalk:application:environment:
    APP_ENV: production
    APP_DEBUG: false
    LOG_CHANNEL: stderr
    LOG_LEVEL: error

    # Database - Set these in EB Console or via eb setenv
    DB_CONNECTION: mysql
    # DB_HOST: (set via EB console - RDS endpoint)
    # DB_DATABASE: (set via EB console)
    # DB_USERNAME: (set via EB console)
    # DB_PASSWORD: (set via EB console)

    # Cache/Session/Queue - Redis
    CACHE_STORE: redis
    SESSION_DRIVER: redis
    QUEUE_CONNECTION: redis
    # REDIS_HOST: (set via EB console - ElastiCache endpoint)

    # Platform defaults
    PLATFORM_TIMEZONE: America/Denver
    DAILY_RESET_HOUR: 0
    STREAK_GRACE_HOURS: 12
    INITIAL_HINTS: 3
    LEADERBOARD_LIMIT: 100
