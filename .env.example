APP_NAME="Game Platform API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Denver
APP_URL=http://localhost

# Use SQLite for local dev, MySQL for production
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=game_platform
# DB_USERNAME=root
# DB_PASSWORD=

# Redis for caching, sessions, queues
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# For local dev without Redis, use these instead:
# CACHE_STORE=file
# SESSION_DRIVER=file
# QUEUE_CONNECTION=sync

#--------------------------------------------------------------------------
# Platform Configuration
#--------------------------------------------------------------------------
PLATFORM_NAME="Diamond Games"
PLATFORM_VERSION=1.0.0
PLATFORM_TIMEZONE=America/Denver

# Daily Challenge Settings
DAILY_RESET_HOUR=0
DAILY_GENERATE_AHEAD=7
DAILY_CACHE_TTL=3600

# Streak Settings
STREAK_GRACE_HOURS=12
STREAK_INITIAL_FREEZES=1
STREAK_MAX_FREEZES=5

# Rewards & Economy
INITIAL_HINTS=3
HINTS_PER_COMPLETION=0
HINTS_PER_MILESTONE=2
HINTS_PER_AD=1
MAX_HINTS_PER_PUZZLE=3

# Hint Costs (how many hints consumed per action)
HINT_COST_REVEAL_LETTER=1
HINT_COST_REVEAL_WORD=2
HINT_COST_SKIP_PUZZLE=3

# Leaderboard Settings
LEADERBOARD_LIMIT=100
LEADERBOARD_CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_SESSIONS=30
RATE_LIMIT_HINTS=20

#--------------------------------------------------------------------------
# Claude API (Content Generation)
#--------------------------------------------------------------------------
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=2048
CLAUDE_TEMPERATURE=0.8
CLAUDE_RATE_LIMIT=30

#--------------------------------------------------------------------------
# Cross-Promotion
#--------------------------------------------------------------------------
CROSSPROMO_ENABLED=true
CROSSPROMO_FREQUENCY=5

# WaitPulse Integration (optional)
WAITPULSE_ENABLED=false
WAITPULSE_API_URL=
WAITPULSE_API_KEY=

#--------------------------------------------------------------------------
# Analytics
#--------------------------------------------------------------------------
ANALYTICS_ENABLED=true

#--------------------------------------------------------------------------
# AWS Configuration (Production)
#--------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
AWS_BUCKET=

# SQS Queue (Production)
SQS_PREFIX=https://sqs.us-west-2.amazonaws.com/your-account-id
SQS_QUEUE=game-platform-queue

# ElastiCache Redis (Production)
# REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
# REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail (Optional - for notifications)
#--------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@diamondgames.com"
MAIL_FROM_NAME="${APP_NAME}"
